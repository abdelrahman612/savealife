<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/background_ticket"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/background_ticket"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal"

        android:paddingBottom="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"

        android:paddingTop="1dp"
        android:textAlignment="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_path"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignBottom="@+id/txtflollower"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0"
            android:background="@color/white"


            android:src="@drawable/persoicon" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bulogin"
            android:layout_toLeftOf="@+id/webView"
            android:layout_toRightOf="@+id/bulogin"
            android:layout_weight="1"
            android:background="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:paddingRight="3dp"
            android:text="User name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0894f8"
            android:textSize="12dp"
            android:textStyle="bold" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#868181"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:inputType="text"
        android:ems="10"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:id="@+id/etPost"
        android:background="@color/white"
        android:hint="What you think?" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#868181"
        android:layout_marginBottom="15dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="10dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_post"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_send_black_24dp" />
        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_attach"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_attach_file_black_24dp" />


    </LinearLayout>
</LinearLayout>

</LinearLayout>